%div#information
  %dl
    - if song.tuning
      %dt.tuning Tuning
      %dd.tuning= song.tuning

    - if song.capo
      %dt.capo Capo
      %dd.capo= song.capo

    - if song.key
      %dt.key Key
      %dd.key= song.key

    - if song.tempo
      %dt.tempo Tempo
      %dd.tempo= song.tempo

    - if song.year
      %dt.year Year
      %dd.year= song.year

    - if song.album
      %dt.album Album
      %dd.album= song.album

  %div#chords
    - chords.each do |chord|
      %span= raw(chord_svg(chord))

- song.sections.each do |section|
  %div.section
    %div.name= section.name
    %div.lines
      - section.lines.each do|line|
        - if line.tablature?
          %div.tablature= line.tablature
        - else
          %div.line
            - line.parts.each do |part|
              %div.part
                %div.chord= part.chord
                %div.lyric= part.lyric