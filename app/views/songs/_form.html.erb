<%= form_with(model: song, local: true) do |form| %>
  <% if song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :artist %>
    <%= form.text_field :artist, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :spotify_url %>
    <%= form.text_field :spotify_url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= react_component("Editor") %>

    <%= form.text_area :body, class: "form-control", rows: 20, style: "font-family:monospace" %>
  </div>

  <div class="form-group">
    <%= form.label :difficulty %>
    <%= form.select :difficulty, Song.difficulties.map { |key, value| [key.humanize, key] }, {}, {class: "form-control"} %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
