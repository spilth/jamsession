<p id="notice"><%= notice %></p>

<h1>Song Admin</h1>

<p class="text-right"><%= link_to 'New Song', new_song_path, class: "btn btn-primary" %></p>

<table class="table table-striped table-borderless">
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Difficulty</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= link_to song.title, song %></td>
        <td><%= song.artist %></td>
        <td><%= song.difficulty.try(:humanize) %></td>
        <td><%= link_to 'Edit', edit_song_path(song), class: 'btn btn-warning btn-sm' %></td>
        <td>
          <%= link_to 'Delete', song_path(song), class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
