<p id="notice"><%= notice %></p>

<h2>Songbooks</h2>

<table class="table table-striped table-borderless">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>PDF</th>
  </tr>
  </thead>

  <tbody>
  <% @songbooks.each do |songbook| %>
    <tr>
      <td><%= link_to songbook.name, songbook %></td>
      <td><%= songbook.description %></td>
      <td>
        <% if songbook.building %>
          <div class="spinner-border spinner-border-sm" role="status">
            <span class="sr-only">Loading...</span>
          </div>
        <% elsif songbook.pdf.attached? %>
          <%= link_to 'PDF', rails_blob_path(songbook.pdf) %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>Songs</h2>

<table class="table table-striped table-borderless">
  <thead>
  <tr>
    <th>Title</th>
    <th>Artist</th>
    <th>PDF</th>
    <th>Spotify</th>
  </tr>
  </thead>

  <tbody>
  <% @songs.each do |song| %>
    <tr>
      <td><%= link_to song.title, song %></td>
      <td><%= song.artist %></td>
      <td><% if song.pdf.attached? %><%= link_to 'PDF', rails_blob_path(song.pdf) %><% end %></td>
      <td><%= link_to_if song.spotify_url.present?, 'Spotify', song.spotify_url %></td>
    </tr>
  <% end %>
  </tbody>
</table>
